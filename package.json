{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --port=5173 --host",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "analyze": "nuxt analyze",
    "lint": "npm lint:eslint && npm lint:stylelint",
    "lint:fix": "npm lint:eslint --fix && npm lint:stylelint --fix",
    "lint:eslint": "eslint --config .config/eslint.mjs",
    "lint:eslint:inspect": "npx @eslint/config-inspector --config .config/eslint.mjs",
    "lint:stylelint": "stylelint \"**/*.{css,scss}\" --config .config/stylelint.json",
    "db:generate": "drizzle-kit generate --config=.config/drizzle.ts",
    "db:migrate": "drizzle-kit migrate --config=.config/drizzle.ts",
    "db:push": "drizzle-kit push --config=.config/drizzle.ts",
    "db:pull": "drizzle-kit pull --config=.config/drizzle.ts",
    "db:studio": "drizzle-kit studio --config=.config/drizzle.ts"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/fonts": "^0.11.4",
    "@nuxt/icon": "^2.0.0",
    "@nuxt/ui": "^3.3.5",
    "@nuxtjs/i18n": "^10.0.6",
    "@vueuse/nuxt": "^13.9.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.34.0",
    "nuxt": "4.1.0",
    "nuxt-auth-utils": "^0.5.25",
    "vue": "^3.5.20",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "date-fns": "^4.1.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5"
  }
}
